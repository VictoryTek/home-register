# Save with exact versions (no ^ or ~)
save-exact=true

# Ensure package-lock.json is always used
package-lock=true

# Fail if lockfile would be modified
# Uncomment in CI: package-lock-only=true

# Strict SSL verification
strict-ssl=true

# Use npm registry
registry=https://registry.npmjs.org/

# Audit on install
audit=true

# Fund messages are noise
fund=false

# Engine strict mode - fail if Node version incompatible
engine-strict=true

# Update notifier is noise in CI
update-notifier=false
